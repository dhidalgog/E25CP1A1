<div class="row">
  <div class="col-md-3">
    <h1>New Post</h1>
    <%= form_with model: @post do |form| %>
      <% if @post.errors.any? %>
        <div id="error_explanation">
         <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>
          <ul>
            <% @post.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="field">
        <%= form.label :title %>
        <%= form.text_field :title %>
      </div>

      <div class="actions">
        <%= form.submit %>
      </div>
    <% end %>
  </div>

  <div class="col-md-9">
    <h1>Posts</h1>

    <table>
      <thead>
        <tr>
          <th>Title</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody id="posts">
          <%= render @posts %>
      </tbody>
    </table>
  </div>
</div>






